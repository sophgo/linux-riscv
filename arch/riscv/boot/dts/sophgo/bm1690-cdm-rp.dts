/dts-v1/;
#include <dt-bindings/interrupt-controller/irq.h>
#include "sg2044-cpu.dtsi"

/ {
	/delete-node/ memory@80000000;
};

/ {
	memory@80000000 {
		device_type = "memory";
		reg = <0x00000001 0xc0200000 0x00000000 0x1fe00000>;
	};

	uart1: serial@7030000000 {
		compatible = "snps,dw-apb-uart";
		reg = <0x00000070 0x30001000 0x00000000 0x00001000>;
		interrupt-parent = <&intc>;
		interrupts = <42 IRQ_TYPE_LEVEL_HIGH>;
		clock-frequency = <500000000>;
		current-speed = <115200>;
		reg-shift = <2>;
		reg-io-width = <4>;
	};

	aliases {
		serial0 = &uart1;
	};

	veth:  veth {
			compatible = "sg2260, sgveth";
			reg = <0x00000001 0xa1800000 0x00000000 0x1000>,
				<0x00000001 0xa1810000 0x00000000 0x70000>,
				<0x00000001 0xa1880000 0x00000000 0x70000>,
				<0x0000006d 0x50000000 0x00000000 0x1000>;
			reg-names = "shm_reg", "rx_reg", "tx_reg", "irq_reg";
			interrupt-parent = <&intc>;
			interrupts = <831 IRQ_TYPE_LEVEL_HIGH>;//IRQ_TYPE_EDGE_RISING
			interrupt-names = "rx";
			status = "okay";
		};

	chosen {
		bootargs = "console=ttyS0,115200 earlycon rdinit=/init root=/dev/ram0 rw initrd=0x1cb000000,128M maxcpus=64 no5lvl";
		stdout-path = "serial0";
	};
};
