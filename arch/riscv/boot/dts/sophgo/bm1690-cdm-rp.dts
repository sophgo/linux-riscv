/dts-v1/;
#include <dt-bindings/interrupt-controller/irq.h>
#include "sg2044-cpu.dtsi"

/ {
	/delete-node/ memory@80000000;
};

/ {
	memory@80000000 {
		device_type = "memory";
		reg = <0x0000000c 0x80200000 0x00000000 0xffe00000>;
	};

	uart1: serial@7030000000 {
		compatible = "snps,dw-apb-uart";
		reg = <0x00000070 0x30001000 0x00000000 0x00001000>;
		interrupt-parent = <&intc>;
		interrupts = <42 IRQ_TYPE_LEVEL_HIGH>;
		clock-frequency = <500000000>;
		current-speed = <115200>;
		reg-shift = <2>;
		reg-io-width = <4>;
	};

	aliases {
		serial0 = &uart1;
	};

	chosen {
		bootargs = "console=ttyS0,115200 earlycon rdinit=/init root=/dev/ram0 rw initrd=0xc8b000000,64M maxcpus=64 no5lvl";
		stdout-path = "serial0";
	};
};
