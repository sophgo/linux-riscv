/dts-v1/;

/ {
	model = "SOPHGO BM1690 TPU SCALAR";
	compatible = "sophgo,sg2044";
	#address-cells = <2>;
	#size-cells = <2>;
	dma-noncoherent;

	memory@a4000000 {
		device_type = "memory";
		reg = <0x0 0xa1200000 0x0 0x1ee00000>;
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		timebase-frequency = <50000000>;
		cpu@0 {
			device_type = "cpu";
			reg = <0>;
			status = "okay";
			compatible = "riscv";
			//riscv,isa = "rv64imafdc_sstc";
			riscv,isa = "rv64imafdc_zicbom_zicbop_zicboz_zicond1p0_zihintntl0p2_zihintpause_zawrs_zfa0p1_zfbfmin0p8_zfh_zca_zcb_zcd_zba_zbb_zbc_zbs_zvfbfmin0p8_zvfbfwma0p8_zvfh0p1_sscofpmf_sstc_svinval_svnapot_svpbmt";
			riscv,cbom-block-size = <64>;
			riscv,cboz-block-size = <64>;
			mmu-type = "riscv,sv48";
			cpu0_intc: interrupt-controller {
				#interrupt-cells = <1>;
				compatible = "riscv,cpu-intc";
				interrupt-controller;
			};
		};
	};

	top_misc_ctrl@7050000000 {
		compatible = "syscon";
		reg = <0x70 0x50000000 0x00 0x8000>;
	};

	soc {
		#address-cells = <2>;
		#size-cells = <2>;
		compatible = "simple-bus";
		ranges;

		clint_mswi: clint-mswi@690cc00000 {
			compatible = "thead,c900-clint-mswi";
			reg = <0x00000069 0x0cc00000 0x00000000 0x00004000>;
			interrupts-extended = <
			&cpu0_intc 3
			>;
		};

		clint_mtimer0: clint-mtimer@6840000000 {
			compatible = "thead,c900-clint-mtimer";
			reg = <0x00000068 0x40000000 0x00000000 0x00008000>;
			interrupts-extended = <
			&cpu0_intc 7
			>;
		};

		//1cores PLIC1
		intc: interrupt-controller@690c800000 {
			#address-cells = <2>;
			#interrupt-cells = <1>;
			compatible = "riscv,plic0";
			interrupt-controller;
			interrupts-extended = <
			&cpu0_intc 0xffffffff &cpu0_intc 9
			>;
			reg = <0x00000069 0x0c800000 0x00000000 0x400000>;
			reg-names = "control";
			riscv,max-priority = <7>;
			riscv,ndev = <53>;
		};

		uart0: serial@7030002000 {
			compatible = "snps,dw-apb-uart";
			reg = <0x00000070 0x30002000 0x00000000 0x00001000>;
			interrupt-parent = <&intc>;
			interrupts = <4>;
			clock-frequency = <500000000>;
			clock-names = "baudclk";
			reg-shift = <2>;
			reg-io-width = <4>;
		};
	};

	aliases {
		serial0 = &uart0;
	};

	chosen {
		bootargs = "console=ttyS0,115200 earlycon rdinit=/init root=/dev/ram0 rw initrd=0x0ab000000,64M no5lvl";
		stdout-path = "serial0";
	};
};
