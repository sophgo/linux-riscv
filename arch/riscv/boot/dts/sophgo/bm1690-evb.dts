/dts-v1/;
/dts-v1/;
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/reset/sophgo,sg2044-reset.h>
#include <dt-bindings/clock/sophgo,sg2044-clock.h>
#include "sg2044-cpu.dtsi"
#include "sg2044-clock.dtsi"
#include "sg2044-pinctrl.dtsi"
#include "sg2044-peri-sys.dtsi"
#include "bm1690-tpu-sys.dtsi"
#include "bm1690-video-sys.dtsi"
#include "sg2044-pcie-intc.dtsi"
//#include "sg2044-pcie-5rc-rp.dtsi"

/ {
	/delete-node/ bm-emmc@703000A000;
	/delete-node/ memory@80000000;

	memory@80000000 {
		device_type = "memory";
		reg = <0xb 0xc0000000 0x4 0x40000000>;
	};

	aliases {
		serial0 = &uart1;
	};

	chosen {
		bootargs = "console=ttyS1,115200 earlycon rdinit=/init root=/dev/ram0 rw initrd=0xbcb000000,32M maxcpus=4 no5lvl";
		stdout-path = "serial0";
	};
};

&sd {
	sdhci-caps-mask = <0x0 0x10580000>;
};

&i2c1 {
	sg2044_srst: sg2044-reset@17 {
		compatible = "sophgo,sg2042-hwmon-mcu";
		reg = <0x17>;
	};
};
