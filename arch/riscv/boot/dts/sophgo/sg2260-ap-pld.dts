	};

	aliases {
		serial0 = &uart0;
		#if 0
		ethernet0 = &ethernet0;
		dwcxlg0 = &dwcxlg0;
		#endif
	};

	chosen {
		bootargs = "console=ttyS0,9600 earlycon rdinit=/init root=/dev/ram0 rw initrd=0x8b000000,32M rdmem=0x100000000,2040M maxcpus=4 no5lvl";
		stdout-path = "serial0";
	};
};
